@page
@model Signup
@{
    Layout = null;
    ViewBag.Title = "Signup";
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script>
        alert(@ViewBag.ErrorMessage);
    </script>
}
<header>
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/img/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate_login.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!--===============================================================================================-->
</header>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title" style="background-image: url(images/bg-01.jpg);">
                    <span class="login100-form-title-1">
                        Sign Up
                    </span>
                </div>
                <form class="login100-form validate-form" asp-controller="Login" asp-action="Signup" method="post" enctype="multipart/form-data">
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Account is required">
                        <span class="label-input100">使用者姓名</span>
                        <input class="input100" type="text" name="UserName" placeholder="請輸入姓名">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Account is required">
                        <span class="label-input100">Email</span>
                        <input class="input100" type="email" name="Email" placeholder="請輸入Email">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Account is required">
                        <span class="label-input100">帳戶</span>
                        <input class="input100" type="text" name="Account" placeholder="請輸入帳號">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Account is required">
                        <span class="label-input100">密碼</span>
                        <input class="input100" type="password" name="Password" placeholder="請輸入6~16字元英數密碼" min="6" max="16">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Account is required">
                        <span class="label-input100">性別</span>
                        <input class="input10" type="radio" name="Gender" value="Male">男
                        <input class="input10" type="radio" name="Gender" value="Female">女
                        <input class="input10" type="radio" name="Gender" value="Other">未知
                        
                    </div>
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Account is required">
                        <span class="label-input100">生日</span>
                        <input class="input100" type="date" name="Birthday">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Account is required">
                        <span class="label-input100">學歷</span>
                        <input class="input100" type="text" name="Education" placeholder="請輸入畢業學校">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-26">
                        <span class="label-input100">手機號碼</span>
                        <input class="input100" type="text" name="Cellphone">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-26">
                        <span class="label-input100">市話電話</span>
                        <input class="input100" type="text" name="Telephone">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-26">
                        <span class="label-input100">LineID</span>
                        <input class="input100" type="text" name="LineID">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Address is required">
                        <span class="label-input100">住址</span>
                        <input class="input100" type="text" name="Address">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Photo is required">
                        <span class="label-input100">照片</span>
                        <input class="input100" type="file" name="Photo" />
                        <span class="focus-input100"></span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Sign up
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
<footer>
    <!--===============================================================================================-->
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/main.js"></script>
</footer>
